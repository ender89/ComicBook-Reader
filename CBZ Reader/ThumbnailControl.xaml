<UserControl x:Class="CBZ_Reader.ThumbnailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CBZ_Reader"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="140">
    <Grid>
        <Image x:Name="ThumbnailImage" Margin="0,0,0,30" Stretch="Uniform"  Width="140" Height="170"/>
        <Label x:Name="ThumbnailLabel" Content="Label" VerticalAlignment="Center" Margin="0,170,0,0" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White"/>

    </Grid>
</UserControl>
